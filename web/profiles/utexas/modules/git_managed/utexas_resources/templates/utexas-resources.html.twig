 {#
/**
 * @file
 * Template for Resources widget.
 *
 * Available variables:
 * - headline: The field headline.
 * - image: The image.
 * - copy: The copy field.
 * - link.url: The URL of the each ink.
 * - link.title: The text of each link.
 *
 */
#}

<div class="ut-resources-wrapper">
  {% if headline %}
    <h3 class="ut-headline--underline">{{ headline }}</h3>
  {% endif %}
  {% for item in resource_items %}
    <div class="utexas-resource">
      {% if item.image %}
        <div class="image-wrapper">
          {{ item.image }}
        </div>
      {% endif %}
      <div class="data-wrapper">
        <h3 class="ut-headline">
          {{ item.headline }}
        </h3>
        <p>{{ item.copy }}</p>
        {% for link in item.links %}
          <ul class="link-list">
            <li>{{ link }}</li>
          </ul>
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>