 {#
/**
 * @file
 * Custom theme implementation for the Promo List field.
 *
 * Available variables:
 * - headline: The Promo List overall headline field.
 * - promo_list_items: An array containing the Promo List individual item contents.
 *  - image: The Promo List image.
 *  - headline: The Promo List headline.
 *  - copy: The Promo List copy field.
 *  - link: The Promo List link field.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'ut-promo-list-wrapper',
    wrapper|clean_class,
  ]
%}
<h3 class="ut-headline--underline">{{ headline }}</h3>
<div{{ attributes.addClass(classes) }}>
{% for item in promo_list_items %}
  <div class="{{ columns }}">
    {{ item.image }}
    <div class="content">
      {% if item.link and item.headline %}
      <a href="{{ item.link }}" class="ut-link">
        <h3 class="ut-headline">{{ item.headline }}</h3>
      </a>
      {% elseif item.headline %}
        <h3 class="ut-headline">{{ item.headline }}</h3>
      {% endif %}
      {{ item.copy }}
    </div>
  </div>
{% endfor %}
</div>
