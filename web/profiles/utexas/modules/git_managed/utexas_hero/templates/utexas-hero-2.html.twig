{#
/**
 * @file
 * Template for the Hero field, Style 1.
 *
 * Available variables:
 * - media: An image or video -- ensure that you handle display for either.
 * - heading: a string of text meant to be prominently displayed
 * - subheading: a string of text, subsidiary to the heading
 * - cta_uri: a URI. May be use to wrap other elements.
 * - cta_title: a string of text meant to be displayed as a button.
 *
 */
#}
{% if media_identifier %}
  <div id="{{ media_identifier }}" class="ut-hero hero--photo-gradient">
    <span class="sr-only">{{ alt }}</span>
    {% if heading or subheading or cta_uri %}
      <div class="hero-content">
        <div class="hero-callout">
          {% if heading %}
            <div class="hero-headline">{{ heading }}</div>
          {% endif %}
          {% if cta_uri %}
            <div class="hero-cta">
              {{ link(cta_title, cta_uri, { 'class': ['ut-btn']}) }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
{% endif %}