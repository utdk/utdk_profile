{#
/**
 * @file
 * Custom theme implementation to display a Photo Content Area.
 *
 * Available custom variables:
 * - {{ image }} : PCA image
 * - {{ photo_credit }} : Photo credit for the image
 * - {{ headline }} : headline
 * - {{ copy }} : copy text
 * - link.url: The URL of the each link.
 * - link.title: The text of each link.
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'ut-photo-content-area'
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {% if image %}
    <div class="photo-wrapper">
      {{ image }}
      <div class="caption">
        <span>{{ photo_credit }}</span>
      </div>
    </div>
  {% endif %}
  <div class="content-wrapper">
    {{ date }}
    <h2 class="ut-headline">{{ headline }}</h2>
    <div class="ut-copy">
      {{ copy }}
    </div>
    <ul class="link-list">
      {% for link in links %}
      <li>
        {{ link(link.title, link.url, { 'class':['ut-link']} ) }}
      </li>
      {% endfor %}
  </ul>
  </div>
</div>