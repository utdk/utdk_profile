{#
/**
 * @file
 * Default theme implementation to display a full-width layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 * - background_image: style attribute that provides the background image
 *
 * @ingroup themeable
 */
#}
{% if content %}
    <div{{ attributes.addClass(classes) }}>
        <div{{ background_image }}></div>
        {% if content.main %}
            <div {{ region_attributes.main.addClass('layout__region', 'layout__region--main') }}>
                {{ content.main }}
            </div>
        {% endif %}
    </div>
{% endif %}