<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="/var/www/utdk_scaffold/web/core/tests/bootstrap.php" colors="true"
         beStrictAboutTestsThatDoNotTestAnything="true"
         beStrictAboutOutputDuringTests="true"
         beStrictAboutChangesToGlobalState="true"
         printerClass="\Drupal\Tests\Listeners\HtmlOutputPrinter">
  <php>
    <!-- Set error reporting to E_ALL. -->
    <ini name="error_reporting" value="32767"/>
    <!-- Do not limit the amount of memory tests take to run. -->
    <ini name="memory_limit" value="-1"/>
    <env name="MINK_DRIVER_ARGS" value='["chrome", {"browserName":"chrome","chromeOptions":{"args":["--disable-gpu","--headless",  "--disable-dev-shm-usage", "--no-sandbox"]}}, "http://localhost:9515"]' />
    <env name="MINK_DRIVER_ARGS_WEBDRIVER" value='["chrome", {"browserName":"chrome","chromeOptions":{"args":["--disable-gpu","--headless", "--disable-dev-shm-usage", "--no-sandbox"]}}, "http://localhost:9515"]' />
    <env name="MINK_DRIVER_CLASS" value="Drupal\FunctionalJavascriptTests\DrupalSelenium2Driver" />
  </php>
  <testsuites>
    <testsuite name="unit">
      <file>/var/www/utdk_scaffold/web/core/tests/TestSuites/UnitTestSuite.php</file>
    </testsuite>
    <testsuite name="kernel">
      <file>/var/www/utdk_scaffold/web/core/tests/TestSuites/KernelTestSuite.php</file>
    </testsuite>
    <testsuite name="functional">
      <file>/var/www/utdk_scaffold/web/core/tests/TestSuites/FunctionalTestSuite.php</file>
    </testsuite>
    <testsuite name="functional-javascript">
      <file>/var/www/utdk_scaffold/web/core/tests/TestSuites/FunctionalJavascriptTestSuite.php</file>
    </testsuite>
  </testsuites>
  <listeners>
    <listener class="\Drupal\Tests\Listeners\DrupalListener">
    </listener>
    <!-- The Symfony deprecation listener has to come after the Drupal listener -->
    <listener class="Symfony\Bridge\PhpUnit\SymfonyTestsListener">
    </listener>
  </listeners>
  <!-- Filter for coverage reports. -->
  <filter>
    <whitelist>
      <directory>/var/www/utdk_scaffold/web/core/includes</directory>
      <directory>/var/www/utdk_scaffold/web/core/lib</directory>
      <directory>/var/www/utdk_scaffold/web/core/modules</directory>
      <directory>/var/www/utdk_scaffold/web/modules</directory>
      <directory>/var/www/utdk_scaffold/web/sites</directory>
     </whitelist>
  </filter>
</phpunit>
