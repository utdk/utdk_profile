{
  "name": "utexas/utdk8",
  "description": "UTDK Drupal 8.x CMS",
  "type": "project",
  "keywords": ["Drupal", "UTexas"],
  "license": "MIT",
  "authors": [
    {
      "name": "Mark Fullmer",
      "email": "jfullmer@austin.utexas.edu",
      "homepage": "https://markfullmer.com",
      "role": "Developer"
    },
    {
      "name": "Tyler Fahey",
      "email": "tfahey@austin.utexas.edu",
      "homepage": "https://tylerfahey.com",
      "role": "Developer"
    },
    {
      "name": "Michael Marsello",
      "email": "mmarsello@austin.utexas.edu",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "drupal-kit-support@utlists.utexas.edu",
    "issues": "https://github.austin.utexas.edu/eis1-wcs/utdk8-shared/issues",
    "source": "https://github.austin.utexas.edu/eis1-wcs/utdk8-shared"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "vcs",
      "url": "git@github.austin.utexas.edu:eis1-wcs/layout_per_node.git"
    },
    {
      "type": "vcs",
      "url":  "git@github.austin.utexas.edu:eis1-wcs/utexas_qualtrics_filter.git"
    },
    {
      "type": "vcs",
      "url":  "git@github.austin.utexas.edu:eis1-wcs/forty_acres.git"
    }
  ],
  "require": {
    "composer/installers": "1.2.0",
    "rvtraveller/qs-composer-installer": "1.1",
    "drupal-composer/drupal-scaffold": "2.0.1",
    "cweagans/composer-patches": "1.0",
    "drupal/core": "8.3.6",
    "webflo/drupal-core-strict": "8.3.6",
    "drupal/console": "1.0.0-rc8",
    "drush/drush": "~8",
    "drupal/responsive_tables_filter": "1.1",
    "drupal/twitter_profile_widget": "1.4",
    "drupal/bootstrap": "3.5",
    "drupal/adminimal_theme": "1.3",
    "oomphinc/composer-installers-extender": "1.1.2",
    "utexas/layout_per_node": "dev-master",
    "utexas/utexas_qualtrics_filter": "dev-master",
    "utexas/forty_acres": "dev-master",
    "drupal/twig_tweak": "1.8",
    "drupal/features": "3.5"
  },
  "require-dev": {
    "mikey179/vfsstream": "^1.2",
    "behat/behat": "3.*",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.2",
    "behat/mink-goutte-driver": "^1.2",
    "jcalderonzumba/gastonjs": "^1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
    "drupal/drupal-extension": "^3.1",
    "drush-ops/behat-drush-endpoint": "^0.0.4",
    "phpunit/phpunit": "^4.8",
    "symfony/css-selector": "^2.8"
  },
  "conflict": {
      "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "build-assets": [
      "composer install --optimize-autoloader"
    ],
    "post-install-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ]
  },
  "extra": {
    "installer-types": ["utexas-module", "utexas-theme"],
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/profiles/utexas/modules/custom/composer_modules/{$name}": ["type:utexas-module"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "web/themes/custom/{$name}": ["type:utexas-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "build-env": {
      "install-cms": [
        "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes",
        "drush pm-enable config_direct_save --yes"
      ],
      "export-configuration": "drush config-export --yes"
    },
    "drupal-scaffold": {
      "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8/{version}/{path}",
      "includes": [
        "sites/default/default.services.pantheon.preproduction.yml",
        "sites/default/settings.pantheon.php"
      ],
      "excludes": [
        ".csslintrc",
        ".eslintrc",
        ".editorconfig",
        ".eslintignore",
        ".eslintrc.json",
        "web.config"
      ]
    }
  }
}
